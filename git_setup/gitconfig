[user]
name = your name                     # <-- Replace this
email = you@users.noreply.github.com # <-- Replace this

[core]
autocrlf = input
filemode = false
ignorecase = false
editor = code --wait
excludesFile = ~/.gitignore_global

[init]
defaultBranch = main

[pull]
rebase = merges

[merge]
tool = vscode
conflictstyle = diff3

[diff]
tool = vscode

[color]
ui = auto

[alias]
st = status
co = checkout
br = branch
ci = commit
edit = config --global --edit
lg = log --oneline --graph --all --decorate
last = log -1 HEAD
list = config --list --show-origin
unstage = reset HEAD --
amend = commit --amend --no-edit
type = cat-file -t
dump = cat-file -p

[push]
default = current

[credential]
helper = store

[safe]
directory = *
